<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.alex.mapper.ArticleMapper">

    <resultMap id="mappingArticle" type="com.alex.entity.vo.ArticleVO">
        <id column="articleID" property="articleId"/>
        <result column="title" property="title"/>
        <result column="createDate" property="createDate"/>
        <result column="userID" property="userId"/>
        <result column="cover" property="cover"/>
        <result column="content" property="content"/>
        <result column="nickname" property="nickname"/>
        <result column="typeID" property="typeName"/>
        <result column="head" property="head"/>
    </resultMap>
    <select id="findArticleAll" resultMap="mappingArticle">
        SELECT
          a.title, -- 文章标题
          a.createDate, -- 发表时间
          a.id AS articleID, -- 文章的ID
          u.id AS userID, -- 用户的ID
          a.cover, -- 文章封面
          a.content, -- 文章内容
          u.nickname, -- 用户昵称
          t.typeName, -- 类别名称
          u.head -- 用户的头像
        FROM
          article AS a
        INNER JOIN
          user AS u
        ON
          a.userID = u.id
        INNER JOIN
          type AS t
        ON
          t.id = a.typeID
          <where>
              <if test="search != null and search != ''">
                  AND a.title='%'#{search}'%'
              </if>
              <if test="type != null and type!=''">
                  AND t.typeName=#{type}
              </if>
          </where>
        ORDER BY
          a.createDate
        DESC
        LIMIT
          #{begin},#{limit}
    </select>
    <select id="findArticleCount" resultType="java.lang.Long">
        SELECT
          count(1)
        FROM
          article AS a
        INNER JOIN
          user AS u
        ON
          a.userID = u.id
        INNER JOIN
          type AS t
        ON
          t.id = a.id
        <where>
            <if test="search != null and search != ''">
                AND a.title='%'#{search}'%'
            </if>
            <if test="type != null and type!=''">
                AND t.typeName=#{type}
            </if>
        </where>
    </select>

    <!--查看文章内容-->
    <select id="selectByArticleId" resultMap="mappingArticle">
        select
          a.title, -- 文章标题
          a.typeID, -- 文章类型ID
          a.createDate, -- 发表时间
          a.id AS articleID, -- 文章的ID
          a.cover, -- 文章封面
          a.content, -- 文章内容
          u.nickname, -- 发表人昵称
          u.id, -- 发表用户ID
          u.head -- 用户头像
        from
          article a
        INNER JOIN
          user u
        ON
          u.id=a.userID
        where a.id=#{articleId}
    </select>

    <!--发布文章-->
    <insert id="addArticle">
      INSERT INTO
        article
        (id,userID,content,cover,title,typeID)
      VALUES
      (#{articleFrom.articleID},#{articleFrom.userID},#{articleFrom.content},#{articleFrom.photo},#{articleFrom.title},#{articleFrom.typeID});
    </insert>


    <resultMap id="mappingType" type="com.alex.entity.Type">
        <id column="id" property="id"/>
        <result column="typeName" property="typeName"/>
    </resultMap>
    <select id="selectTypeList" resultMap="mappingType">
        select
          id,
          typeName
        from
        type;
    </select>

    <resultMap id="mappingHotArticle" type="com.alex.entity.vo.HotArticle">
        <id column="id" property="hotArticleID"/>
        <result column="title" property="hotArticleTitle"/>
    </resultMap>
    <select id="hotArticle" resultMap="mappingHotArticle">
    SELECT
      ar.title, -- 文章标题
      ar.id -- 文章ID
    FROM
      article AS ar
    WHERE
      ar.id
    IN
      (
        SELECT
          co.articleID
        FROM
          comment AS co
        GROUP BY
          co.articleID
        ORDER BY
          co.articleID
      )
      LIMIT
        0,10
    </select>
</mapper>