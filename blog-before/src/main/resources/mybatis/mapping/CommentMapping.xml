<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.alex.mapper.CommentMapper">

    <resultMap id="commentMap" type="com.alex.entity.vo.CommentVo">
        <id column="id" property="id"/>
        <result column="user_id" property="user_id"/>
        <result column="content" property="content"/>
        <result column="create_data" property="create_data"/>
        <result column="head" property="head"/>
        <result column="nickname" property="nickname"/>
    </resultMap>
    <!--添加评论-->
    <insert id="addComment">
      insert into comment (id,create_data,user_id,article_id,content)
      values (#{comment.id},#{comment.create_data},#{comment.user_id},#{comment.article_id},#{comment.content});
    </insert>

    <!--查询评论列表-->
    <select id="selectCommentList" resultMap="commentMap">
      SELECT c.id,c.user_id,c.content,c.create_data,u.head,u.nickname
      FROM comment c INNER JOIN user u
      on
      c.user_id=u.id where c.article_id=#{articleId}
      ORDER BY c.create_data DESC;
    </select>




</mapper>